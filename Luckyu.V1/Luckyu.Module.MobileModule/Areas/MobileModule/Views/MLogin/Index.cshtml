@{
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}

@section Header{
    <style>
        .login-page main {
            background-size: 100% auto;
            /*   background-image: url(/image/login.jpg);*/
        }

        .login-page .logo h1 {
            font-size: .65rem;
            padding-left: .3rem;
        }

        .logo {
            height: 2rem;
            margin: 1.2rem auto 1rem auto;
            text-align: center;
        }

            .logo img {
                height: 1rem;
            }

        .login-form {
            padding-left: .6rem;
            padding-right: .6rem;
        }

            .login-form .bui-list {
                border-top: none;
                margin-bottom: .7rem;
            }

            .login-form > .bui-btn {
                margin-bottom: .3rem;
            }

            .login-form .bui-btn-text {
                margin-bottom: .2rem;
            }

        .bui-list > [class*=bui-btn]:last-child {
        }

        .login-form .bui-label {
            width: 0.5rem;
            margin-right: .2rem;
        }

        .login-form .fa,
        .login-form .icon-lock,
        .login-form .icon-pic {
            font-size: 0.48rem;
        }

        .login-form .bui-input {
            height: .6rem;
            background: none;
        }

        .login-form .bui-btn-text {
            text-align: center;
            color: #666666;
            font-size: 0.2rem;
        }

        .icon-eye:before {
            content: "\e680"
        }

        .icon-eye.active:before {
            content: "\e67f"
        }
    </style>
}

<div class="bui-page  login-page">
    <main>
        <div class="logo bui-box-center">
            <div class="bui-fluid">
                <div class="span12">
                    <h1>@AppSettingsHelper.GetAppSetting("SoftName")  @AppSettingsHelper.GetAppSetting("SoftVersion")</h1>
                </div>
                <div class="span12">
                    <div>@AppSettingsHelper.GetAppSetting("Description")</div>
                </div>
            </div>
        </div>
        <div class="login-form">
            <ul class="bui-list">
                <li class="bui-btn bui-box clearactive">
                    <label class="bui-label" for="username"><i class="fa fa-user-o"></i></label>
                    <div class="span1">
                        <div class="bui-input user-input">
                            <input id="username" type="text" placeholder="用户名" luckyu-verify="required" value="system" />
                        </div>
                    </div>
                </li>
                <li class="bui-btn bui-box clearactive">
                    <label class="bui-label" for="loginpwd"><i class="icon-lock"></i></label>
                    <div class="span1">
                        <div class="bui-input password-input">
                            <input id="password" type="password" placeholder="密码" luckyu-verify="required" value="admin_root" />
                        </div>
                    </div>
                </li>
                <li class="bui-btn bui-box clearactive" id="divVCode" style="display:none;">
                    <label class="bui-label" for="verifycode"><i class="icon-pic"></i></label>
                    <div class="span1">
                        <div class="bui-input vcode-input">
                            <input id="verifycode" type="text" placeholder="验证码" luckyu-verify="required" />
                        </div>
                    </div>
                    <div style="width: 90px;">
                        <img id="verifycode_img" src="/Login/VerifyCode" />
                    </div>
                </li>
            </ul>
            <div class="bui-btn round primary" id="btnLogin">登录</div>
            @*<div class="bui-btn-text" href="pages/register/register.html">注册</div>
                <div class="bui-btn-text">忘记密码</div>*@
            <div class="bui-btn-text" onclick="javascript: window.location.href='/Login/Index'">电脑版</div>
        </div>
    </main>
</div>

@section Footer{
    <script src="~/lib/zepto.md5.js"></script>
    @Html.AppendJs("~/Areas/MobileModule/Views/MLogin/Index.js")
}