@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Header{
    <link href="~/lib/layuiadmin/style/login.css" rel="stylesheet" />
}

<div class="layadmin-user-login layadmin-user-display-show" id="Luckyu-user-login">
    <div class="layadmin-user-login-main">
        <div class="layadmin-user-login-box layadmin-user-login-header">
            <h2>@AppSettingsHelper.GetAppSetting("SoftName")  @AppSettingsHelper.GetAppSetting("SoftVersion")</h2>
            <p>@AppSettingsHelper.GetAppSetting("Description")</p>
        </div>
        <div class="layadmin-user-login-box layadmin-user-login-body layui-form">
            <div class="layui-form-item">
                <label class="layadmin-user-login-icon layui-icon layui-icon-username" for="username"></label>
                <input type="text" name="username" id="username" placeholder="用户名" class="layui-input" lay-verify="required"  value="system" />
            </div>
            <div class="layui-form-item">
                <label class="layadmin-user-login-icon layui-icon layui-icon-password" for="password"></label>
                <input type="password" name="password" id="password" placeholder="密码" class="layui-input" lay-verify="required" value="admin_root" />
            </div>
            <div class="layui-form-item">
                <div class="layui-row">
                    <div class="layui-col-xs7">
                        <label class="layadmin-user-login-icon layui-icon layui-icon-vercode" for="verifycode"></label>
                        <input type="text" name="verifycode" id="verifycode" maxLength="4" placeholder="图形验证码" class="layui-input" lay-verify="required"/>
                    </div>
                    <div class="layui-col-xs5">
                        <div style="margin-left: 10px;">
                            <img id="verifycode_img" src="/Login/VerifyCode" class="layadmin-user-login-codeimg">
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="layui-form-item" style="margin-bottom: 20px;">
                    <input type="checkbox" name="remember" lay-skin="primary" title="记住密码">
                    <a href="forget.html" class="layadmin-user-jump-change layadmin-link" style="margin-top: 7px;">忘记密码？</a>
                </div>*@
            <div class="layui-form-item">
                <button type="button" id="btnLogin" class="layui-btn layui-btn-fluid" lay-submit lay-filter="*">登   录</button>
            </div>
            <div class="layui-form-item" style="margin-bottom: 20px;">
                <a href="/MobileModule/MLogin/Index" class="layadmin-user-jump-change layadmin-link" style="margin-top: 7px;color:white;">手机版 =></a>
            </div>

        </div>
    </div>

    <div class="layui-trans layadmin-user-login-footer">
        <p>Copyright © 2020 @AppSettingsHelper.GetAppSetting("Author") 版权所有</p>
    </div>
</div>
@section Footer{
    <script src="~/lib/jquery/jquery.md5.min.js"></script>
    @Html.AppendJs("~/Views/Login/Index.js")
}