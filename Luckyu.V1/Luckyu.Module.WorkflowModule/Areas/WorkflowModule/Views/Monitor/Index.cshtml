
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<div class="formbackgroud">
    <div class="layui-row index-header">
        <div class="pull-left">
            <span>
                <input type="radio" name="is_finished" lay-filter="is_finished" value="0" title="运行中" checked />
                <input type="radio" name="is_finished" lay-filter="is_finished" value="1" title="已完成" />
                <input type="radio" name="is_finished" lay-filter="is_finished" value="2" title="挂起" />
            </span>
        </div>

        <div class="pull-right">
            <div class="layui-btn-group">
                <button type="button" id="see" class="layui-btn layui-btn-sm"><i class="fa fa-eye"></i>&nbsp;查看</button>
            </div>
            <div class="layui-btn-group">
                <button type="button" id="modify" class="layui-btn layui-btn-sm"><i class="fa fa-modx"></i>&nbsp;调整</button>
            </div>
            <div class="layui-btn-group" id="divAction">
                <button type="button" id="sleep" class="layui-btn layui-btn-sm"><i class="fa fa-coffee"></i>&nbsp;挂起</button>
                <button type="button" id="finish" class="layui-btn layui-btn-sm"><i class="fa fa-stop-circle"></i>&nbsp;结束</button>
            </div>
        </div>
    </div>
    <div class="layui-row">
        <table id="grid"></table>
        <div id="gridPager"></div>
    </div>
</div>

@section Footer{
    @Html.AppendJs("~/Areas/WorkflowModule/Views/Monitor/Index.js")
}

