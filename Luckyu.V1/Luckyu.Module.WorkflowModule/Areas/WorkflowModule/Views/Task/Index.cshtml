
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<div class="formbackgroud">
    <div class="layui-row index-header">
        <div class="pull-left">
            <span>
                <input type="radio" name="tasktype" lay-filter="tasktype" value="1" title="待办任务"  checked/>
                <input type="radio" name="tasktype" lay-filter="tasktype" value="2" title="已办任务" />
                <input type="radio" name="tasktype" lay-filter="tasktype" value="3" title="发起的任务" />
            </span>
        </div>

        <div class="pull-right">
            <div class="layui-btn-group">
                <button type="button" id="aduit" class="layui-btn layui-btn-sm"><i class="fa fa-eye"></i>&nbsp;审核/查看</button>
            </div>
        </div>
    </div>
    <div class="layui-row">
        <table id="grid"></table>
        <div id="gridPager"></div>
    </div>
</div>

@section Footer{
    @Html.AppendJs("~/Areas/WorkflowModule/Views/Task/Index.js")
}

