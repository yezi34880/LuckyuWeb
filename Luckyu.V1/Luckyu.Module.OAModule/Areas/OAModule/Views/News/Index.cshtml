
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<div class="formbackgroud">
    <div class="layui-row index-header">
        <div class="pull-left">
        </div>

        <div class="pull-right">
            <div class="layui-btn-group">
                <button type="button" id="add" class="layui-btn layui-btn-sm"><i class="fa fa-plus"></i>&nbsp;新增</button>
                <button type="button" id="edit" class="layui-btn layui-btn-sm"><i class="fa fa-pencil"></i>&nbsp;编辑/查看</button>
                <button type="button" id="delete" class="layui-btn layui-btn-sm"><i class="fa fa-trash-o"></i>&nbsp;删除</button>
            </div>
            <div class="layui-btn-group">
                <button type="button" id="show" class="layui-btn layui-btn-sm"><i class="fa fa-eye"></i>&nbsp;预览</button>
            </div>
            <div class="layui-btn-group">
                <button type="button" id="publish" class="layui-btn layui-btn-sm"><i class="fa fa-external-link-square"></i>&nbsp;发布/撤回</button>
                <button type="button" id="settop" class="layui-btn layui-btn-sm"><i class="fa fa-arrow-circle-up"></i>&nbsp;置顶/取消</button>
            </div>
        </div>
    </div>
    <div class="layui-row">
        <table id="grid"></table>
        <div id="gridPager"></div>
    </div>
</div>

@section Footer{
    @Html.AppendJs("~/Areas/OAModule/Views/News/Index.js")
}

