            <input type="checkbox" id="is_enable" lay-skin="switch" lay-text="有效|无效" checked />
        </div>
    </div>*@
</div>

@section Footer{
    @Html.AppendJs("~/Areas/SystemModule/Views/Config/Form.js")
}
